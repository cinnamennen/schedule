{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportExtensions": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "../src",
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["../src/**/*"],
  "exclude": ["../src/**/*.test.ts", "../node_modules"]
}
