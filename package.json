{
  "name": "schedule",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": {
    "schedule": "./dist/index.js"
  },
  "author": "Caleb Mennen",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepare": "yarn build",
    "lint:ts": "eslint . --ext .ts",
    "lint:ts:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check": "yarn lint:ts && yarn format:check && yarn type-check",
    "fix": "yarn lint:ts:fix && yarn format"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/terminal-kit": "^2.5.6",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "lowdb": "^7.0.1",
    "parse-duration": "^1.1.0",
    "terminal-kit": "^3.0.1",
    "yargs": "^17.7.2"
  },
  "type": "module"
}
