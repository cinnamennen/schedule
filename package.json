{
  "name": "schedule",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "markdownlint-cli2": ".config/.markdownlint-cli2.jsonc",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "lint:ts": "eslint \"**/*.ts\"",
    "lint:ts:fix": "eslint \"**/*.ts\" --fix",
    "lint:md": "markdownlint-cli2 \"docs/**/*.md\" \".config/.cursorrules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"docs/**/*.md\" \".config/.cursorrules\"",
    "format": "prettier --config .config/.prettierrc --write .",
    "format:check": "prettier --config .config/.prettierrc --check .",
    "type-check": "tsc --noEmit --project .config/tsconfig.json",
    "check": "yarn lint:ts && yarn lint:md && yarn format:check && yarn type-check",
    "fix": "yarn lint:ts:fix && yarn lint:md:fix && yarn format",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/terminal-kit": "^2.5.6",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "markdownlint-cli2": "^0.15.0",
    "markdownlint-cli2-formatter-default": "^0.0.5",
    "prettier": "^3.4.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "lowdb": "^7.0.1",
    "parse-duration": "^1.1.0",
    "terminal-kit": "^3.0.1",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --config .config/.prettierrc --write"
    ],
    "**/*.{json,md,.cursorrules}": [
      "prettier --config .config/.prettierrc --write"
    ]
  }
}
